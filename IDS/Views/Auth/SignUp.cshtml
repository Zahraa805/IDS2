@model IDS.Models.ViewModels.SignUpVm

@{
    ViewData["Title"] = "SignUp Page";
}

@{
    //ViewData["Title"] = ViewBag.thePluralEntity;
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إنشاء حساب جديد</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="~/css/styleLogin&SignUp.css" rel="stylesheet">


    <style>
    </style>



</head>
<body>
    <header>
        <div class="logo">
            <img src="~/Icons/FOfDentist.jpg">
        </div>
        <div class="UniversityLogo">
            <img src="~/Icons/logo-aun.png">
        </div>
    </header>
    <div class="form-container">
        <img src="~/Icons/logo.png" alt="System Logo">
        <h3>تسجيل حساب جديد</h3>
   @*      @if (ViewBag.ErrrorsFromModelState != null)
        {
            <div class="alert alert-danger" style="padding: 15px;">
                <ul>
                    @foreach (var error in ViewBag.ErrrorsFromModelState)
                    {
                        if (error != "")
                        {
                            <li>@error</li>
                            break;
                        }
                    }
                </ul>
            </div>
        } *@

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" style="padding: 15px;">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        if (error.ErrorMessage != "")
                        {
                            <li>@error.ErrorMessage</li>
                            break;
                        }
                    }
                </ul>
            </div>
        }

        <form asp-action="SignUp" method="post">
            <div class="form-group">
                <div class="input-group">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="UserName" type="text" placeholder="اسم المستخدم">
                </div>
                <div class="input-group">
                    <i class="fa-solid fa-id-card"></i>
                    <input asp-for="FullName" type="text" placeholder="الإسم ثلاثي">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Password" type="password" placeholder="كلمة السر">
                </div>
                <div class="input-group">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="تأكيد كلمة السر">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <i class="fa-solid fa-id-card"></i>
                    <input asp-for="NationalId" type="text" placeholder="الرقم القومي">
                </div>
                <div class="input-group">
                    <i class="fa-solid fa-envelope"></i>
                    <input asp-for="Email" type="email" placeholder="البريد الالكتروني">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <i class="fa-solid fa-phone"></i>
                    <input asp-for="PhoneNumber" type="text" placeholder="رقم الهاتف">
                </div>
                <div class="input-group">
                    <i class="fa-solid fa-location-dot"></i>
                    <input asp-for="Address" type="text" placeholder="العنوان">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group" style="flex-basis: 100%;">
                    <i class="fa-solid fa-user-tag"></i>
                    <select class="form-control" asp-for="Role">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
            </div>
            <input type="submit" value="تسجيل الدخول">
            <p class="form-footer">جميع الحقوق محفوظة لفريق IDS 2025</p>
        </form>
    </div>
</body>
</html>

