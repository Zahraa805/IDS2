@model IDS.Models.Patient

@{
    ViewData["Title"] = "Reception ticket Page";
}

@{
    //ViewData["Title"] = ViewBag.thePluralEntity;
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعديل بيانات مريض</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link href="~/css/EditPatient.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/popup.css">

</head>
<body> 


    <form id="redirectForm" method="post" asp-controller="Admin" asp-action="Index">
        <input type="hidden" name="load" value="Patient/ShowAll" />
    </form>

    <!-- Error Popup -->
    <div id="errorPopup" class="popup-overlay">
        <div class="popup-content error">
            <h3>خطأ</h3>
            <p id="error-message">@TempData["Error"]</p>
            <button class="popup-button" onclick="closePopup('errorPopup')">إغلاق</button>
        </div>
    </div>

    <!-- Success Popup -->
    <div id="successPopup" class="popup-overlay">
        <div class="popup-content success">
            <h3>@TempData["success"]</h3>

            <button class="popup-button" onclick="closePopup('successPopup')">حسناً</button>
        </div>
    </div>


    <img src="~/Icons/logo.png" alt="logo" id="logo">
    <img src="~/Icons/logo-aun.png" alt="assiut" id="assiut">
    <img src="~/Icons/FOfDentist.jpg" alt="teeth" id="teeth">


    <div class="form-container">



        <form asp-action="Edit" method="post">
            <h2>البيانات الشخصية</h2>

            <div class="form-row">
                <div class="form-group">
                    <label>الاسم رباعي:</label>
                    <input asp-for="Name" type="text">
                </div>
                <div class="form-group">
                    <label>العنوان:</label>
                    <input asp-for="Address" type="text">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>رقم الهاتف:</label>
                    <input asp-for="phoneNumber" type="text">
                </div>
                <div class="form-group">
                    <label>المهنة:</label>
                    <input asp-for="profession" type="text">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>الرقم القومي:</label>
                    <input asp-for="PatientId" type="text" readonly>
                </div>

                <div class="form-group">
                    <label>السن:</label>
                    <input asp-for="Age" type="text">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>النوع:</label>
                    <select asp-for="Gender">
                        <option value="Male">ذكر</option>
                        <option value="Female">أنثى</option>
                    </select>
                </div>
            </div>

            <div class="submit-container d-flex links">
                <button type="submit" class="btn btn-primary" style="width : 50%;">تعديل البيانات</button>

         
                
                <a href="#" onclick="document.getElementById('redirectForm').submit();" class="btn btn-primary" style="text-decoration : none; width : 30%;">
                    العودة إلى قائمة المستخدمين
                </a>
            </div>
        </form>
    </div>

    <!-- Script -->
    <script>
        function closePopup(id) {
            document.getElementById(id).style.display = "none";
        }

        window.onload = function () {
            var error = "@TempData["Error"]";
            var success = "@TempData["success"]";

            if (error && error.trim() !== "") {
                document.getElementById("errorPopup").style.display = "flex";
            }

            if (success && success.trim() !== "") {
                document.getElementById("successPopup").style.display = "flex";
            }
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
