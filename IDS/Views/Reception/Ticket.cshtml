@model IDS.Models.TicketVM
@{
    ViewData["Title"] = "Ticket Page";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recetion-view</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Ticket.css">
</head>
<body>

    <img src="~/Images/logo.png" alt="logo">
    <img src="~/Images/assiut.png" alt="assiut" id="assiut">
    <img src="~/Images/teeth.png" alt="teeth" id="teeth">

    <div class="text">
        <h1>Free Clinics Admission From OutPatient</h1>
    </div>
    <h1 id="fill">إستمارة دخول بالمجان للعيادات الخارجية</h1>

    <br>
    <br>
    <br>

    <form asp-action="Edit" method="post">
        <table class="date1">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" style="padding: 15px;"><h3>@TempData["Error"]</h3></div>
            }

            @if (ViewBag.ModelStateErrors != null)
            {
                <div class="alert alert-danger" style="padding: 15px;">
                    <ul>
                        @foreach (var error in ViewBag.ModelStateErrors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-danger" style="padding: 15px;"><h3>@TempData["Success"]</h3></div>
            }

            <tr>
                <th>تاريخ الكشف</th>
                <td colspan="6"><input type="date" name="تاريخ الكشف" class="date full-width" readonly></td>
            </tr>
            <tr>
                <th>تاريخ الكشف القادم</th>
                <td colspan="6"><input type="date" name="NextDate" class="date full-width" readonly></td>
            </tr>
          @*   <tr>
                <th>يتوجه إلي</th>
                <td colspan="6"><input type="date" name="status" class="date full-width" readonly></td>
            </tr> *@
        </table>

        <div class="containers-wrapper">
            <div class="container2">
                <h2>البيانات الشخصية</h2>

                <div class="field">
                    <label>الاسم رباعي:</label>
                    <input asp-for="Name" type="text" readonly>
                </div>

                <div class="field">
                    <label>العنوان:</label>
                    <input asp-for="Address" type="text" readonly>
                </div>

                <div class="field">
                    <label>رقم الهاتف:</label>
                    <input asp-for="phoneNumber" type="text" readonly>
                </div>

                <div class="field">
                    <label>المهنة:</label>
                    <input asp-for="profession" type="text" readonly>
                </div>

                <div class="field">
                    <label>الرقم القومي:</label>
                    <input asp-for="PatientId" type="text" readonly>
                </div>

                <div class="field">
                    <label>النوع:</label>
                    <select asp-for="Gender" class="form-control" disabled>
                        <option value="Male">ذكر</option>
                        <option value="Female">أنثي</option>
                    </select>

                    <div class="field">
                        <label class="age">السن:</label>
                        <input asp-for="Age" type="text" name="السن" readonly>
                    </div>
                </div>
            </div>

            <div class="container3">
                <h3>:Referred to</h3>
                <div class="checklist">
                    <div class="group">
                        <div class="item"><input asp-for="Oral" type="checkbox" id="oral" disabled><label for="oral"> Oral med. & Perio<br><span>طب الفم وعلاج اللثة</span></label></div>
                        <div class="item"><input asp-for="RemovableProsth" type="checkbox" id="removable" disabled><label for="removable"> Removable prosth<br><span>تركيبات متحركة</span></label></div>
                        <div class="item"><input asp-for="Operative" type="checkbox" id="operative" disabled><label for="operative"> Operative<br><span>حشو</span></label></div>
                        <div class="item"><input asp-for="Endodontic" type="checkbox" id="endodont" disabled><label for="endodont"> Endodont<br><span>علاج الجذور</span></label></div>
                        <div class="item"><input asp-for="Ortho" type="checkbox" id="ortho" disabled><label for="ortho"> Ortho<br><span>تقويم</span></label></div>
                    </div>
                    <div class="group">
                        <div class="item"><input asp-for="CrownAndBridge" type="checkbox" id="crown" disabled><label for="crown"> Crown & Bridge<br><span>تركيبات ثابتة</span></label></div>
                        <div class="item"><input asp-for="Surgery" type="checkbox" id="surgery" disabled><label for="surgery"> Surgery<br><span>جراحة</span></label></div>
                        <div class="item"><input asp-for="Pedo" type="checkbox" id="pedo" disabled><label for="pedo"> Pedo<br><span>أطفال</span></label></div>
                        <div class="item"><input asp-for="XRay" type="checkbox" id="xray" disabled><label for="xray"> X-ray<br><span>أشعة</span></label></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container4">
            <h2>Medical History</h2>
            <table border="1" class="table2">
                <tr>
                    <td><input asp-for="HeartTrouble" type="checkbox" disabled> Heart trouble</td>
                    <td class="checkbox-row">
                        <label>Hepatitis</label>
                        <div class="checkbox-group">
                            <label> A <input type="checkbox" id="A" disabled></label>
                            <label> B <input type="checkbox" id="B" disabled></label>
                            <label> C <input type="checkbox" id="C" disabled></label>
                        </div>
                    </td>
                    <td><input asp-for="Anemia" type="checkbox" disabled> Anemia</td>
                    <td><input asp-for="AspirinIntake" type="checkbox" disabled> Aspirin Intake</td>
                </tr>
                <tr>
                    <td><input asp-for="Hyperttention" type="checkbox" disabled> Hypertension</td>
                    <td><input asp-for="AIDs" type="checkbox" disabled> AIDs</td>
                    <td><input asp-for="Rheumatism" type="checkbox" disabled> Rheu. Arthritis</td>
                    <td><input asp-for="KidneyTroubles" type="checkbox" disabled> Kidney Troubles</td>
                </tr>
                <tr>
                    <td><input asp-for="Pregnancy" type="checkbox" disabled> Pregnancy</td>
                    <td><input asp-for="Tuberculosis" type="checkbox" disabled> Tuberculosis</td>
                    <td><input asp-for="RadTherapy" type="checkbox" disabled> Red. Therapy</td>
                    <td><input asp-for="Asthma" type="checkbox" disabled> Asthma</td>
                </tr>
                <tr>
                    <td><input asp-for="Diabetes" type="checkbox" disabled> Diabetes</td>
                    <td><input asp-for="Allergies" type="checkbox" disabled> Allergies</td>
                    <td><input asp-for="Haemophilia" type="checkbox" disabled> Haemophilia</td>
                    <td><input asp-for="HayFever" type="checkbox" disabled> Hay Fever</td>
                </tr>
            </table>

            <label class="text4">Medical History & Present Medication</label>
            <textarea asp-for="MedicalHistoryText" readonly></textarea>
        </div>

        <br><br><br>
        <label class="text2">:Chief Complaint</label>
        <textarea class="ChiefComlant" asp-for="ChiefComlant" readonly></textarea>
        <label class="text3">:Previsional Diagnosis</label>
        <textarea asp-for="PrevisionalDiagnosis" class="diagnosis" readonly>
1- ..........................................................
2- ..........................................................
3- ..........................................................
4- ..........................................................
5- ..........................................................
        </textarea>

        <div class="submit-container">
            <button id="back" class="submit-btn" style="text-decoration : none;" disabled>تعديل</button>
        </div>
    </form>

</body>
</html>
